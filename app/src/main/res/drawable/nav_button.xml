<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:width="180dp" android:height="60dp" android:drawable="@color/transparent" android:gravity="center" />
            <item android:width="180dp" android:height="48dp" android:drawable="@drawable/button_background" android:gravity="center" />
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:width="180dp" android:height="60dp" android:drawable="@color/transparent" android:gravity="center" />
            <item android:width="180dp" android:height="48dp" android:drawable="@drawable/button_clicked_background" android:gravity="center" />
        </layer-list>
    </item>
</selector>